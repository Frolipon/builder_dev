{
  "name": "mosaico",
  "version": "0.13.0",
  "description": "Free Email Template Editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/goodenough/mosaico.git"
  },
  "main": "./src/js/app.js",
  "directories": {
    "test": "test"
  },
  "aliasify": {
    "aliases": {
      "console": "console-browserify/index.js",
      "jsep": "jsep/src/jsep.js"
    }
  },
  "browserify": {
    "transform": [
      "aliasify",
      "browserify-shim",
      "debowerify"
    ]
  },
  "browserify-shim": {
    "jquery": "global:jQuery",
    "jquery-ui/sortable": "global:jQuery",
    "jquery-ui/draggable": "global:jQuery",
    "knockout": "global:ko",
    "evol-colorpicker": {},
    "knockout-jqueryui": "global:kojqui",
    "tinymce": "global:tinymce"
  },
  "scripts": {
    "postinstall": "bower-npm-install --non-interactive",
    "deps": "bower-npm-install --non-interactive",
    "test": "grunt jasmine_node",
    "start": "nodemon ./index.js --watch server --watch .badsenderrc"
  },
  "dependencies": {
    "body-parser": "^1.14.2",
    "chalk": "^1.1.1",
    "compression": "^1.6.1",
    "express": "^4.13.3",
    "gm": "^1.21.1",
    "jquery-file-upload-middleware": "^0.1.7",
    "lodash": "^4.0.0",
    "morgan": "^1.6.1",
    "rc": "^1.1.6"
  },
  "devDependencies": {
    "aliasify": "^1.7.2",
    "async": "0.9.0",
    "autoprefixer-core": "5.2.1",
    "bower": "1.4.1",
    "bower-npm-install": "0.5.9",
    "browserify": "11.0.1",
    "browserify-shim": "3.8.10",
    "cheerio": "0.19.0",
    "connect-livereload": "0.5.3",
    "csswring": "3.0.7",
    "deamdify": "0.1.1",
    "debowerify": "1.2.0",
    "grunt": "0.4.5",
    "grunt-bowercopy": "1.2.0",
    "grunt-browserify": "4.0.0",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-connect": "0.9.0",
    "grunt-contrib-copy": "^0.8.1",
    "grunt-contrib-jshint": "0.11.2",
    "grunt-contrib-less": "1.0.1",
    "grunt-contrib-watch": "0.6.1",
    "grunt-exorcise": "2.0.0",
    "grunt-express": "1.4.0",
    "grunt-jasmine-node-coverage": "0.4.1",
    "grunt-newer": "1.1.1",
    "grunt-postcss": "0.6.0",
    "jasmine-core": "2.3.4",
    "jasmine-node": "1.14.5",
    "jshint-stylish": "2.0.1",
    "load-grunt-tasks": "3.1.0",
    "mockery": "1.4.0",
    "nodemailer": "1.4.0",
    "nodemon": "^1.8.1",
    "phantomjs": "1.9.16",
    "styliner": "0.8.9",
    "uglifyify": "3.0.1",
    "watchify": "3.3.1"
  },
